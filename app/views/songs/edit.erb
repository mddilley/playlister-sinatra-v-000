<h2>New Song</h2>

<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <p>
    <label>Song Name: <%= @song.name %></label>
    <br><label> Edit:</label>
    <input type="text" name="Song Name" value="<%=@song.name%>">
  </p>

  <p>
    <label>Artist Name</label>
    <input type="text" name="Artist Name" id="Artist Name">
  </p>

  <p>
    <label>Genres</label>
    <% Genre.all.each do |genre| %>
      <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
    <% end %>
  </p>
  <input type="submit" value="Create">

</form>
